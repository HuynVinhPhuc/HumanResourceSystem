<SfDialog Width="750px" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog"> </DialogEvents>
    <DialogTemplates>
        <Header> Employee Transfer Detail </Header>
        <Content>
            <EditForm Model="CurrentEmployeeTransfer" Enhance>
                <div class="card border-success">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-10">
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                    <input @bind="CurrentEmployeeTransfer.Name" class="form-control" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-5">
                                <div class="form-group mt-1">
                                    <label class="form-label">General Department</label>
                                    <input @bind="CurrentEmployeeTransfer!.Branch!.Department!.GeneralDepartment!.Name" class="form-control" disabled />
                                </div>
                                <div class="form-group mt-2">
                                    <label class="form-label">Department</label>
                                    <input @bind="CurrentEmployeeTransfer!.Branch!.Department!.Name" class="form-control" disabled />
                                </div>
                                <div class="form-group mt-2">
                                    <label class="form-label">Branch</label>
                                    <input @bind="CurrentEmployeeTransfer!.Branch!.Name" class="form-control" disabled />
                                </div>
                                <div class="form-group mt-1">
                                    <label class="form-label">New Position</label>
                                    <InputText @bind-Value="CurrentEmployeeTransfer.NewPosition" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group mt-1">
                                    <label class="form-label">Request Date</label>
                                    <InputDate @bind-Value="CurrentEmployeeTransfer.RequestDate" class="form-control" disabled></InputDate>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="form-label">Employee Request</label>
                                    <InputText @bind-Value="CurrentEmployeeTransfer.EmployeeRequestName" class="form-control" disabled></InputText>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="form-label">Reason</label>
                                    <InputTextArea @bind-Value="CurrentEmployeeTransfer.Reason" class="form-control" rows="4" disabled></InputTextArea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="CLOSE" IsPrimary="true" OnClick="CloseDialog" />
    </DialogButtons>
</SfDialog>

@code {
    [Parameter] public EmployeeTransfer CurrentEmployeeTransfer { get; set; } = new();
    private bool IsVisible { get; set; } = false;

    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void CloseDialog()
    {
        IsVisible = false;
        StateHasChanged();
    }

}
